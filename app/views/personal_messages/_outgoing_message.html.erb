<div class="outgoing_msg">
  <div class="outgoing_msg_img">
    <%= image_tag avatar_url(message.user), width: '21', height: '21', class: "round-img" %>
  </div>
  <div class="sent_msg">
    <p><%= message.body %></p>
    <span class="time_date">
      <%= format_time message.created_at %></span>
  </div>
</div>
